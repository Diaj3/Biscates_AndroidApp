<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:id="@+id/parent_layout" >

        <ImageView
            android:id="@+id/imagensCategorias"
            android:padding="2dp"
            android:layout_width="50dp"
            android:layout_height="50dp" />

        <TextView
            android:id="@+id/tituloBiscate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:text="TÃ­tulo"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/imagensCategorias"
            android:layout_toRightOf="@+id/imagensCategorias"
            />
        <TextView
            android:id="@+id/localizacaoBiscate"
            android:fontFamily="@font/montserrat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="Location"
            android:layout_below="@+id/tituloBiscate"
            android:layout_toEndOf="@+id/imagensCategorias"
            android:layout_marginStart="8dp"
            android:layout_toRightOf="@+id/imagensCategorias"
            android:layout_marginLeft="8dp" />

    </RelativeLayout>




