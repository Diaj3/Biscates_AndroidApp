<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:id="@+id/parent_layout" >

        <ImageView
            android:id="@+id/imagensCategorias"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:padding="2dp" />

    <TextView
        android:id="@+id/tituloBiscate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="2dp"
        android:layout_toEndOf="@+id/imagensCategorias"
        android:layout_toRightOf="@+id/imagensCategorias"
        android:fontFamily="@font/montserrat"
        android:text="TÃ­tulo"
        android:textColor="#000000"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/localizacaoBiscate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tituloBiscate"
        android:layout_marginStart="17dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/imagensCategorias"
        android:layout_toRightOf="@+id/imagensCategorias"
        android:fontFamily="@font/montserrat"
        android:text="Location"
        android:textSize="15dp" />

    </RelativeLayout>




